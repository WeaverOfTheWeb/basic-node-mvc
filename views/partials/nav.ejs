<nav>
    <h1 class="logo"><a href="/">Lorem Ipsum</a></h1>
    
    <ul>
      <% if (user !== null && typeof user !== "undefined") { %>
		<li
			class="userPanel"
			onmouseover="this.querySelector('ul').style.display = 'block';"
			onmouseleave="this.querySelector('ul').style.display = 'none';"
		>
			<div>
				Hello, <span><%= user.username %></span>
			</div>
			<img src="https://lewisshaw.me/images/sexy_mofo.png" alt="User profile image" />
		</li>
        <li><a href="/logout">Log out</a></li>
      <% } else { %>
        <li><a href="/login">Log in</a></li>
        <li><a href="/signup" class="btn">Sign up</a></li>
      <% } %>
    </ul>
</nav>